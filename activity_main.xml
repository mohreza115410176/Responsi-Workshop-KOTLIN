<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usergate.kamusbahasabuol.MainActivity">

    <EditText
        android:id="@+id/typeWordTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cari Kata"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/findBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terjemah"
        android:layout_below="@+id/typeWordTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/resultsTxt"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/findBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
